{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2019"],
    "sourceMap": true,
    "outDir": "dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"],
      "~/tests/": ["../tests/"]
    },
    "rootDirs": ["src", "tests"],
    "typeRoots": ["src", "./src/@types"],
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "tests"]
}
